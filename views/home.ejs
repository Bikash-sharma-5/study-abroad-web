  <body>
   
    

  
    <%- include('./hero')%>
     
    <section id="why-mbbs">
      <h2>Why Study MBBS Abroad?</h2>
      <div class="benefits-grid">
          <div class="benefit">
              <img src="/images/7.jpg" alt="Affordable Tuition">
              <h3>Affordable Tuition Fees</h3>
              <p>Many universities offer cost-effective MBBS programs compared to private institutions in India.</p>
          </div>
          <div class="benefit">
              <img src="/images/2.jpg" alt="Globally Recognized Degree">
              <h3>Globally Recognized Degree</h3>
              <p>Graduates receive internationally accepted degrees from MCI, WHO, and NMC-approved universities.</p>
          </div>
          <div class="benefit">
              <img src="/images/3.jpg" alt="High-Quality Education">
              <h3>High-Quality Education</h3>
              <p>Universities abroad provide excellent infrastructure, experienced faculty, and modern technology.</p>
          </div>
          <div class="benefit">
              <img src="/images/4.jpg" alt="Global Exposure">
              <h3>Global Exposure</h3>
              <p>Studying abroad helps students gain global medical exposure and diverse clinical experience.</p>
          </div>
          <div class="benefit">
              <img src="/images/5.jpg" alt="Easy Admission Process">
              <h3>Simple Admission Process</h3>
              <p>Most universities have minimal entrance requirements, making it easy for students to apply.</p>
          </div>
          <div class="benefit">
              <img src="/images/6.jpg" alt="Job Opportunities">
              <h3>Better Career Opportunities</h3>
              <p>Graduates can work in multiple countries with high demand for qualified doctors.</p>
          </div>
      </div>
  </section>
  
    
    
    <%- include('./guide')%>
    <section id="mbbs-abroad">
      <h2>Study MBBS Abroad</h2>
      <div class="grid">
          <% mbbsDestinations.forEach(item => { %>
              <div class="card">
                  <img src="<%= item.image %>" alt="<%= item.country %>" loading="lazy">
                  <h3><%= item.country %></h3>
                  <p><%= item.description %></p>
                  <p><strong>Tuition:</strong> <%= item.tuition_fees %></p>
                  <a href="/details/<%= item.country %>" class="button">Learn More</a>
              </div>
          <% }); %>
      </div>
  </section>
  


 
    <%- include('./partials/scripts') %>
